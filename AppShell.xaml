<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HesapMakinesiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HesapMakinesiApp"
    Shell.FlyoutBehavior="Disabled"
    Title="HesapMakinesiApp">

    <TabBar>
        <ShellContent Title="Standart" 
                      ContentTemplate="{DataTemplate local:MainPage}" 
                      Route="MainPage" />

        <ShellContent Title="Bilimsel" 
                      ContentTemplate="{DataTemplate local:BilimselSayfa}" 
                      Route="BilimselSayfa" />
    </TabBar>

</Shell>
